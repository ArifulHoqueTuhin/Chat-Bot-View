}

<h2>Chat History</h2>

@if (Model != null && Model.Count > 0)
{
    foreach (var msg in Model)
    {
        <div class="mb-3">
            <p><strong>@msg.Sender:</strong> @msg.Message</p>

            @if (msg.Sender == "user")
